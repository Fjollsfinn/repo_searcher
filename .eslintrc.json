{
  "env": {
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": 2019
  },
  "extends": "airbnb",
  "parser": "babel-eslint",
  "plugins": [
    "react",
    "react-hooks"
  ],
  "rules": {
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "error",
    "react/jsx-props-no-spreading": "off",
    "linebreak-style": ["off", "unix"],
    "no-console": "warn",
    "no-shadow": "warn"
  },
  "overrides": [
    {
      "files": ["*.test.js", "*.spec.js"],
      "env": {
        "jest": true
      },
      "rules": {
        "react/jsx-filename-extension": "off"
      }
    }
  ]
}
